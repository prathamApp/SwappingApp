<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff"
    android:weightSum="3">


    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="Message"
        android:textColor="#8c0818"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- <ImageButton
         android:id="@+id/close"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:background="#8c0818"
         android:padding="5dp"
         android:layout_margin="5dp"
         app:srcCompat="@drawable/ic_close_black_24dp" />-->

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/message"
        android:layout_marginTop="5dp"
        android:background="#FFB4111F" />

    <TextView
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_weight="1"
        android:background="#f2dddc"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/count"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkBox_student"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2"
            android:drawablePadding="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="CRL Name"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_qr_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="QR ID"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_crl_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="CRL ID"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/txt_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="State"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_pratham_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Pratham ID"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Date"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>

       <!-- <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_loggedIn_crl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Logged In Crl"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>-->

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_sr_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Serial NO"
                android:textColor="#000000"
                android:textStyle="bold" />
        </ScrollView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Delete"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/frameLayout_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomControls_village"
        android:layout_below="@id/title">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomControls_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_clear_changes_village"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Clear changes"
            android:textColor="#8c0818" />

        <TextView
            android:id="@+id/txt_Ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="Push To Server"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>

