<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b4111f</item>
        <item name="colorPrimaryDark">#8c0818</item>
        <item name="colorAccent">#8c0818</item>
    </style>

    <!--username password-->
    <style name="CustomText">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="CustomSpinner">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="swapbtnright">
        <item name="android:background">@drawable/roundedcornerbtn</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="CustomTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CustomTextProgramInfo">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
</resources>
